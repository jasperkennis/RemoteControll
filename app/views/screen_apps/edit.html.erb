<h1>Submit a new app</h1>

<% if @screen_app.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@screen_app.errors.count, "error") %> 
        prohibited this app from being saved:</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @screen_app.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= render "screen_apps/screen_app_form" %>

<%= link_to 'Back', screen_apps_path %> | <%= link_to "Delete this app",
